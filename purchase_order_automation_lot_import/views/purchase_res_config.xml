<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	    <record id="res_config_settings_purchase_inherit" model="ir.ui.view">
				<field name="name">res.config.inehrit</field>
				<field name="model">res.config.settings</field>
				<field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
				<field name="arch" type="xml">
					<xpath expr="//div[@name='purchase_setting_container']" position="inside">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="import_lot_serial"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="import_lot_serial"/>
                                <div class="text-muted">
                                    Import Automatically Lot/Serial Number &amp; Picking Quantity Done when Confirm Purchase Order.  
                                </div>
                            </div>
                        </div>
					</xpath>
						
				</field>
		</record>

	</data>
</odoo>